# ==============================================================================
# ODF FULL PROFILE CONFIGURATION (EXAMPLE)
# Specialized profile for ODF Performance Testing on a separate AWS Account.
# Copy this to 'profiles/odf-full.config' and customize.
# ==============================================================================

# Different domain for this environment
export RHDP_TOP_LEVEL_ROUTE53_DOMAIN=".sandboxXXXX.opentlc.com"

# --- AWS CREDENTIALS (SEPARATE ACCOUNT) ---
# Overriding the default credentials to deploy on a specific tenant
export AWS_DEFAULT_REGION="eu-central-1"
export AWS_ACCESS_KEY_ID="XXXXXXXXXXXXXXX"
export AWS_SECRET_ACCESS_KEY="XXXXXXXXXXXXXXX"

# --- NODE CONFIGURATION (STANDARD) ---
# Control Plane (Master) Nodes
export AWS_INSTANCE_TYPE_CONTROLPLANE_NODES="m6i.2xlarge"

# Compute (Worker) Nodes
export AWS_WORKERS_COUNT=3
export AWS_INSTANCE_TYPE_COMPUTE_NODES="m6i.xlarge"

# Infra Nodes
export AWS_INFRA_NODES_COUNT=3
export AWS_INSTANCE_TYPE_INFRA_NODES="m6i.2xlarge"

# Storage Nodes
export AWS_STORAGE_NODES_COUNT=3
export AWS_INSTANCE_TYPE_STORAGE_NODES="m6i.xlarge"

# --- SOFTWARE PROFILES ---
# Pointing to a specific feature branch for GitOps
export GIT_REPO_REVISION="only-odf-full-aws"

# Enable Full ODF deployment logic in bastion_script.sh
export ODF_PROFILE="FULL"