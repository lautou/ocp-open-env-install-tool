# ==============================================================================
# COMMON CONFIGURATION (EXAMPLE)
# Shared variables for all profiles.
# Copy this to 'common.config' and customize.
# ==============================================================================

# --- OPENSHIFT VERSION ---
# The specific version of OpenShift to install.
export OPENSHIFT_VERSION="4.20.10"

# --- CLUSTER IDENTITY ---
export CLUSTER_NAME="myocp"

# Base URL to download the openshift-install and oc binaries
export OCP_DOWNLOAD_BASE_URL="https://mirror.openshift.com/pub/openshift-v4/clients/ocp"

# --- INSTALLATION TYPE ---
# "IPI" (Installer Provisioned Infrastructure) or "UPI" (User Provisioned Infrastructure)
export INSTALL_TYPE="IPI"

# --- CREDENTIALS ---
# These passwords will be used if creating htpasswd users or standard kubeadmin.
export OCP_ADMIN_PASSWORD="XXXXXXXXXXXXXXX"
export OCP_NON_ADMIN_PASSWORD="XXXXXXXXXXXXXXX"

# --- DAY 2 GITOPS ---
# Set to "true" to automatically configure ArgoCD and apply Day 2 configs.
export ENABLE_DAY2_GITOPS_CONFIG="true"

# --- GIT CREDENTIALS (GLOBAL) ---
# If all your clusters use the same Git repo/credentials, define them here.
# Otherwise, move them to the specific profile config.

# Template for Git Credentials (e.g. for ArgoCD to pull from private repos)
export GIT_CREDENTIALS_TEMPLATE_URL=""
export GIT_CREDENTIALS_TEMPLATE_TOKEN_NAME=""
export GIT_CREDENTIALS_TEMPLATE_TOKEN_SECRET=""

# The specific GitOps Repository
export GIT_REPO_URL="https://github.com/lautou/ocp-open-env-install-tool.git"
export GIT_REPO_TOKEN_NAME=""
export GIT_REPO_TOKEN_SECRET=""